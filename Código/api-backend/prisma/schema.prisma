model Usuario {
  id        Int      @id @default(autoincrement())
  religiao_id Int
  igreja_id Int
  nome   String
  sobrenome String
  email     String   @unique
  senha  String
  status String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Token {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  hash  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model religiao {
  id_religiao Int @id @default(autoincrement())
  nome String @unique
  descricao String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model igreja {
  id_igreja Int @id @default(autoincrement())
  religiao_id Int
  nome String @unique
  endereco String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model evento {
  id_evento Int @id @default(autoincrement())
  usuario_id Int
  data DateTime
  endereco String
  tipo Boolean
  descricao String
}