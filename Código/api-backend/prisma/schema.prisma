model Usuario {
  id        Int      @id @default(autoincrement())
  religiao_id Int   @default(0)
  igreja_id Int     @default(0)
  nome   String
  email     String   @unique
  senha  String
  status Boolean     @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Token {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  hash  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model religiao {
  id_religiao Int @id @default(autoincrement())
  nome String @unique
  descricao String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model igreja {
  id_igreja Int @id @default(autoincrement())
  religiao_id Int
  nome String @unique
  endereco String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model evento {
  id_evento Int @id @default(autoincrement())
  usuario_id Int
  data DateTime
  endereco String
  tipo Boolean
  descricao String
}